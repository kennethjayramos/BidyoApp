@model Bidyo.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@Model.Genre.Name</li>
    <li>@Model.ReleaseDate.ToLongDateString()</li>
    <li>@Model.DateAdded.ToLongDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

